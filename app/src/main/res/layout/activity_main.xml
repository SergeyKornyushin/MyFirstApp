<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:ems="10"
        android:hint="Type a word"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/btn_convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="reverseText"
        android:text="convert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_reverse" />

    <Button
        android:id="@+id/btn_add_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addExceptionSymbol"
        android:text="add"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/edt_exception_symbols"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_exceptions"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:onClick="clearExceptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edt_input_text"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edt_exception_symbols"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Add exception symbol"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_exceptions"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_symbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />

    <TextView
        android:id="@+id/txt_exceptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="No exceptions"
        app:layout_constraintBottom_toTopOf="@+id/edt_input_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/txt_reverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Revers text"
        android:layout_marginHorizontal="20dp"
        android:textColor="#058CC6"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_convert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_input_text" />


</androidx.constraintlayout.widget.ConstraintLayout>